{
  "manifest_version": 3,
  "name": "Investing.com to Perplexity Exporter",
  "version": "1.0",
  "description": "Adds a button to Investing.com equity pages to export company info to a Perplexity AI Space.",
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.investing.com/*",
    "*://*.perplexity.ai/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.investing.com/equities/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png"
    },
    "default_title": "Investing.com to Perplexity"
  }
}
